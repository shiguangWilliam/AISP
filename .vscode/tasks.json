{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MySQL (Docker): Up -d",
      "type": "shell",
      "command": "docker compose up -d",
      "options": {
        "cwd": "${workspaceFolder}\\backend\\docker\\mysql"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "MySQL (Docker): Down",
      "type": "shell",
      "command": "docker compose down",
      "options": {
        "cwd": "${workspaceFolder}\\backend\\docker\\mysql"
      },
      "problemMatcher": []
    },
    {
      "label": "Backend: Maven clean package (skipTests)",
      "type": "shell",
      "command": ".\\mvnw -DskipTests clean package",
      "options": {
        "cwd": "${workspaceFolder}\\backend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Backend: Spring Boot run",
      "type": "shell",
      "command": ".\\run-spring-boot.cmd",
      "options": {
        "cwd": "${workspaceFolder}\\backend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Frontend: npm install",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}\\frontend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Frontend: dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}\\frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Frontend: build",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}\\frontend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Frontend: start",
      "type": "shell",
      "command": "npm run start",
      "options": {
        "cwd": "${workspaceFolder}\\frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
